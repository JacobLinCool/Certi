{
    "exclude": [
        "**/dist/**",
        "**/lib/**",
        "**/node_modules/**",
        "**/src/_tests/**",
        "**/tsup.config.ts",
        "packages/certi-cloudflare"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
